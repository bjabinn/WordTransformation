@model WordTransformation.Models.Texts

@{
    ViewData["Title"] = "Word Transformation";
    var jsonString = System.Text.Json.JsonSerializer.Serialize(Model.Words);
}

    <h2>Exercise: <span style="font-size:2rem;">@Model.Id</span></h2>

<div class="row">
    <div class="col-sm-10">
        @Html.Raw(Model.Text.Replace("\r\n", "<br />"))
    </div>
    <div class="col-sm-2" style="border:0;border-left:1px solid black">
        <ul style="list-style-type:none;padding:10px;">
        @foreach(var word in Model.Words)
        {
            var identAnswer = $"r{@word.WordId}";
            <li>@word.WordId <span id=@identAnswer>@word.WordToShow</span></li>
        }
        </ul>
    </div>
</div>


<input name="submit" type="button" onclick="checkTest('@jsonString')" value="Check Answers">